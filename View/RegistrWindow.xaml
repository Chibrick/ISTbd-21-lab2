<Window x:Class="CourseWork.View.RegistrWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CourseWork.View"
         mc:Ignorable="d"
        Title="Registration" Height="400" 
        Width="400" 
        WindowStartupLocation="CenterScreen" 
        ResizeMode="NoResize" 
        WindowStyle="SingleBorderWindow" 
        >
    <Grid>
        <Grid VerticalAlignment="Top" Margin="240,10,10,0">
            <Button Margin="0,5,0,0" Click="Button_autorization" Cursor="Hand" Content="Sign in" />
        </Grid>
        <StackPanel VerticalAlignment="Center" Width="150">
            <Label>Login</Label>
            <TextBox Name="Nickname" Margin="0,0,0,5" Text="{Binding Nickname}" />
            <Label>Password</Label>
            <TextBox Name="Password" Margin="0,0,0,5" Text="{Binding Password}"/>
            <Label>Repeat Password</Label>
            <TextBox Name="Password2" Margin="0,0,0,5" Text="{Binding Password2}" Cursor="IBeam"/>
            <Button Margin="0,10,0,0" Click="Registration" Cursor="Hand" Content="Registration" />
        </StackPanel>
    </Grid>
</Window>

